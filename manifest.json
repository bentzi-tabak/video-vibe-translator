
{
  "manifest_version": 3,
  "name": "דיבוב יוטיוב בזמן אמת",
  "version": "1.0",
  "description": "תוסף לדיבוב וידאו יוטיוב בזמן אמת - תמלול, תרגום והקראה בעברית",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://translate.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["libs/translation.js", "content-script.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "הגדרות דיבוב יוטיוב"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
