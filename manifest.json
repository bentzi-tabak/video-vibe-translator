{
  "manifest_version": 3,
  "name": "YouTube Video Dubber",
  "version": "1.0",
  "description": "דיבוב וידאו יוטיוב בזמן אמת",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "*://www.youtube.com/*",
    "*://youtube.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*", "*://youtube.com/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "הגדרות דיבוב"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
